{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "browser": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-restricted-syntax": "off",
    "no-console": "off",
    "no-alert": "off",
    "strict": "off",
    "no-undef": "warn",
    "func-names": ["error", "never"],
    "space-before-function-paren": ["warn", "always"]
  }
}
